<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/debug"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Hello World!" />
        <EditText
            android:id="@+id/key"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="20180105" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/fbSN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
			 android:onClick="searchImagesByName"
            android:text="By Name" />
        <Button
            android:id="@+id/fbSD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
			 android:onClick="searchImagesByDate"
            android:text="By Date" />
        <Button
            android:id="@+id/fbSS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
			 android:onClick="searchImagesBySize"
            android:text="By Size" />
    </LinearLayout>   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >
	<Button
		android:id="@+id/fbSA"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center"
            android:layout_weight="1"
		 android:onClick="searchImages"
		android:text="Show All Images" />
	<Button
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center"
            android:layout_weight="1"
		 android:onClick="Jump2Online"
		android:text="Search Online" />
	</LinearLayout>
    <!--
     <ImageView 
        android:id="@+id/fiv0"
        android:layout_width="100dp"
        android:layout_height="100dp"/>    -->

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>